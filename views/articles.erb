<% if @articles %>
  <% @articles.each do |article| %>
    <article>
      <h2><a href="/articles/<%= article["id"] %>">
      <%= article["title"] %><a></h2>
      <h3><%= article["author"] %></h3><br />
      <p><%= article["original_body"] %><p>
    </article>
    <hr />
  <% end %>
  <% if current_user %>
    <p id="username"><%= current_user["username"] %></p>

    <!-- Write a new article -->

    <button id="newArticle">Create article</button>

    <form id="hideNew" action="/articles" method="post">
      <label for="title">Title: </label>
        <input name="title" type="text" /><br />
      <label for="body">Article body: </label>
        <textarea name="body" type="text"></textarea>
      <button type="submit">Submit</button>
    </form>
  <% end %>
<% else %>
  <article>
    <h2><%= @article[0]["title"] %></h2>
    <h3><%= @article[0]["author"] %></h3><br />
    <p><%= @article[0]["original_body"] %><p>
  </article>

  <select name="u_or_d" id="changed">
    <option>Options</option>
    <option value="edit">Edit article</option>
    <option value="d">Delete article</option>
  </select>

  <form id="hideEdit" action="/articles/<%= @article[0]['id'] %>" method="post">
    <input type="hidden" name="_method" value="put">
    <label for="title">Title: </label>
      <input name="title" type="text" /><br />
    <label for="body">Article body: </label>
      <textarea name="body" type="text"></textarea>
    <button type="submit">Submit</button>
  </form>

  <form id="hideDelete" action="/articles" method="post">
    <p>Are you sure you want to delete this article?</p>
    <input type="hidden" name="_method" value="delete" />
    <input type="radio" name="id" value="<%= @article[0]['id'] %>" /> Yes
    <input type="radio" /> Never mind<br />
    <button type="submit">Yes, delete this article</button>
  </form>
<% end %>
